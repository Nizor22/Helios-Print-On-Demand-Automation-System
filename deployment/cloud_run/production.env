# Production Environment Configuration for Helios POD Business
# Project: helios-pod-system

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=helios-pod-system
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_ZONE=us-central1-a

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=helios-pod-system
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.0-flash-exp

# Printify Configuration
PRINTIFY_API_TOKEN=${PRINTIFY_API_TOKEN}
PRINTIFY_SHOP_ID=8542090
PRINTIFY_API_URL=https://api.printify.com/v1

# MCP Configuration
GOOGLE_MCP_URL=http://helios-mcp:8787
GOOGLE_MCP_AUTH_TOKEN=${GOOGLE_MCP_AUTH_TOKEN}

# Service Configuration
ENABLE_PARALLEL_PROCESSING=true
ENABLE_BATCH_CREATION=true
MIN_OPPORTUNITY_SCORE=7.0
MIN_AUDIENCE_CONFIDENCE=7.0
MAX_EXECUTION_TIME=1800

# Feature Flags
ENABLE_MARKET_RESEARCH=true
ENABLE_SUPPLIER_VETTING=true
ENABLE_COPYRIGHT_REVIEW=true
ENABLE_ETHICAL_CODE=true
ENABLE_TREND_ANALYSIS=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=1800
HEALTH_CHECK_INTERVAL=30

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_LOGGING=true
LOG_LEVEL=INFO
METRICS_EXPORT_INTERVAL=60

# Security Configuration
ENABLE_AUTHENTICATION=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=1000

# Database Configuration (if using Firestore)
FIRESTORE_PROJECT_ID=helios-pod-system
FIRESTORE_COLLECTION_PREFIX=helios_prod

# Storage Configuration
CLOUD_STORAGE_BUCKET=helios-pod-system-assets
CLOUD_STORAGE_LOCATION=us-central1

# Pub/Sub Configuration
PUBSUB_TOPIC_PREFIX=helios_prod
PUBSUB_SUBSCRIPTION_PREFIX=helios_prod

# Scheduler Configuration
CLOUD_SCHEDULER_JOB_PREFIX=helios_prod
MARKET_RESEARCH_INTERVAL=0 */6 * * *
SUPPLIER_VETTING_INTERVAL=0 0 */1 * *
COPYRIGHT_REVIEW_INTERVAL=0 */12 * * *
ETHICAL_CODE_UPDATE_INTERVAL=0 0 */7 * *
